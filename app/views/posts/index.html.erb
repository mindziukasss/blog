<div id="posts">
  <% @posts.each do |post| %>
    <div class="post">
      <div class="post_image">
        <%= link_to (image_tag post.image.url(:medium)), post %>
      </div>
      <div class="post_content">
        <div class="title">
          <h2>
            <%= link_to post.title, post %>
          </h2>
        </div>
        <div class="data clearfix">
          <p class="username">
           
          </p>
          <p class="buttons">
            <span>
              <i class="fa fa-comments-o"></i>
              
            </span>
            <span>
              <i class="fa fa-thumbs-o-up"></i>
        
            </span>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
